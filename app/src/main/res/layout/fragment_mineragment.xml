<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="zhuoyue.com.yanjiaohuidemo.fragment.Mineragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mine_head_bg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:id="@+id/mine_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sms"
                    />

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/mine_sms"
                    />

                <ImageView
                    android:id="@+id/mine_head_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/ic_head_pic"
                    />

                <TextView
                    android:id="@+id/mine_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mine_head_pic"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/mine_head_pic"
                    android:text="奔跑的蘑菇"
                    android:textColor="@color/colorWhite"
                    />

                <TextView

                    android:drawableRight="@drawable/youjiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mine_user_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/mine_head_pic"
                    android:text="个人信息  "
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <GridLayout
                android:id="@+id/mine_grid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</ScrollView>
